 */
function cupcake_admin_add(){
    $form = array();

    $form['name'] = array(
        '#title' => t('Name'),
        '#type' => 'textfield',
        '#description' => t(''),
        '#required' => TRUE,
        '#default_value' => '',
        '#size' => 30
    );
    $form['price'] = array(
        '#title' => t('Price'),
        '#type' => 'textfield',
        '#description' => t(''),
        '#required' => TRUE,
        '#default_value' => '',
        '#size' => 30
    );
    $form['ingredients'] = array(
        '#title' => t('Ingredients'),
        '#type' => 'textfield',
        '#description' => t(''),
        '#required' => TRUE,
        '#default_value' => '',
        '#size' => 30
    );
    $form['submit'] = array(
